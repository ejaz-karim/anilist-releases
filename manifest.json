{
  "manifest_version": 3,
  "name": "AniList Releases",
  "version": "1.1.1",
  "description": "Seadex and Nyaa integration to AniList entries.",
  "permissions": [],
  "icons": {
    "128": "icon.png"
  },
  "host_permissions": [
    "https://releases.moe/*",
    "https://api.ani.zip/*",
    "https://zenshin-supabase-api.onrender.com/*",
    "https://feed.animetosho.org/*",
    "https://nyaa.si/*"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://anilist.co/*"
      ],
      "js": [
        "dist/index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{0777a65c-bfd4-42a4-963e-0ce3907f77a2}",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}